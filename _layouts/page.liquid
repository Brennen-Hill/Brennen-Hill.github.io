---
layout: default
---
{% if page._styles %}
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>

    {%- if page.start or page.end -%}
      <p class="post-description">
        <strong>Date:</strong>
        {%- if page.start -%}
          {{ page.start }} â€“ {{ page.end | default: 'present' }}
        {%- else -%}
          {{ page.end }}
        {%- endif -%}
      </p>
    {%- endif -%}
    {%- if page.role -%}
      <p class="post-description"><strong>Role:</strong> {{ page.role }}</p>
    {%- endif -%}
    {%- if page.organization -%}
      <p class="post-description"><strong>Organization:</strong> {{ page.organization }}</p>
    {%- endif -%}
    {%- if page.collaborators -%}
      <p class="post-description"><strong>Collaborators:</strong> {{ page.collaborators }}</p>
    {%- endif -%}
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
