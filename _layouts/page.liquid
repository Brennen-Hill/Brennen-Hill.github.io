---
layout: default
---
{% if page._styles %}
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description mb-3">{{ page.description }}</p>

    {% if page.role or page.organization or page.start or page.end or page.location or page.collaborators %}
      <div class="small text-muted">
        {% if page.role %}
          <p class="d-flex align-items-center mb-1"><i class="fas fa-user-tie fa-fw me-2"></i>{{ page.role }}</p>
        {% endif %}
        {% if page.organization %}
          <p class="d-flex align-items-center mb-1"><i class="fas fa-building fa-fw me-2"></i>{{ page.organization }}</p>
        {% endif %}
        {% if page.start or page.end %}
          <p class="d-flex align-items-center mb-1">
            <i class="fas fa-calendar-alt fa-fw me-2"></i>
            {%- if page.start -%}
              {{ page.start }} - {{ page.end | default: 'present' }}
            {%- else -%}
              {{ page.end }}
            {%- endif -%}
          </p>
        {% endif %}
        {% if page.location %}
          <p class="d-flex align-items-center mb-1"><i class="fas fa-map-marker-alt fa-fw me-2"></i>{{ page.location }}</p>
        {% endif %}
        {% if page.collaborators %}
          <p class="d-flex align-items-center mb-0"><i class="fas fa-users fa-fw me-2"></i> Brennen Hill, {{ page.collaborators }}</p>
        {% endif %}
      </div>
    {% endif %}
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
