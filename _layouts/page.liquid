---
layout: default
---
{% if page._styles or (page.toc and page.toc.sidebar) %}
  <style type="text/css">
    {{ page._styles }}

    /*
      TOC Sidebar Overrides for Mobile
    */
    @media (max-width: 767.98px) {
      /* 1. Make the TOC container static and visible */
      #toc-sidebar {
        position: static !important;
        display: block !important;
      }

      /*
        2. Force all TOC sub-lists to display.
           bootstrap-toc.min.css hides them (display: none)
           and only shows the '.active' one. On mobile, this
           results in an empty-looking TOC. This forces them
           to be visible.
      */
      #toc-sidebar .nav-link+ul {
        display: block !important;
      }
    }
  </style>
{% endif %}

<div class="post">
  {%- comment -%}
    The <header class="post-header">...
    was moved to _layouts/default.liquid
    to fix the mobile layout stacking order.
  {%- endcomment -%}

  <article>{{ content }}</article>

  {% if page.related_publications %}
    <h2>References</h2>

    <div class="publications">{% bibliography --cited_in_order %}</div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
