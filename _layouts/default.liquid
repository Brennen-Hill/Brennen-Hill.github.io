<!doctype html>
<html lang="{{ site.lang }}">
  <head>
    {% if page.redirect %}
      {% if page.redirect == true %}
        {% assign redirect = site.baseurl | append: '/' %}
      {% elsif page.redirect contains '://' %}
        {% assign redirect = page.redirect %}
      {% else %}
        {% assign redirect = page.redirect | relative_url %}
      {% endif %}
      <meta http-equiv="refresh" content="3; url={{ redirect }}">
    {% endif %}
    {% include head.liquid %}
  </head>

  <body class="{% if site.navbar_fixed %}fixed-top-nav{% endif %} {% unless site.footer_fixed %}sticky-bottom-footer{% endunless %}">
    {% include header.liquid %}

    <div class="container mt-5" role="main">
      {%- comment -%}
        This header was moved from page.liquid to ensure it's always
        at the top, even on mobile.
      {%- endcomment -%}
      {% if page.title %}
        <header class="post-header">
          <h1 class="post-title">{{ page.title }}</h1>
          <p class="post-description">{{ page.description }}</p>
        </header>
      {% endif %}

      {%- comment -%}
        Check if we need to display a sidebar.
      {%- endcomment -%}
      {% assign has_sidebar_content = false %}
      {% if page.toc and page.toc.sidebar %}
        {% assign has_sidebar_content = true %}
      {% endif %}
      {% if page.role or page.organization or page.start or page.end or page.location or page.collaborators %}
        {% assign has_sidebar_content = true %}
      {% endif %}

      {% if has_sidebar_content %}
        {% if page.toc.sidebar == 'right' %}
          <div class="row">
            <div class="col-sm-9">
              {{ content }}
            </div>
            <div class="col-sm-3">
              {%- comment -%} Project metadata block {%- endcomment -%}
              {% if page.role or page.organization or page.start or page.end or page.location or page.collaborators %}
                <div class="small text-muted mb-3">
                  {% if page.role %}
                    <p class="d-flex align-items-center mb-1"><i class="fas fa-user-tie fa-fw me-2"></i>{{ page.role }}</p>
                  {% endif %}
                  {% if page.organization %}
                    <p class="d-flex align-items-center mb-1"><i class="fas fa-building fa-fw me-2"></i>{{ page.organization }}</p>
                  {% endif %}
                  {% if page.start or page.end %}
                    <p class="d-flex align-items-center mb-1">
                      <i class="fas fa-calendar-alt fa-fw me-2"></i>
                      {%- if page.start -%}
                        {{ page.start }} – {{ page.end | default: 'present' }}
                      {%- else -%}
                        {{ page.end }}
                      {%- endif -%}
                    </p>
                  {% endif %}
                  {% if page.location %}
                    <p class="d-flex align-items-center mb-1"><i class="fas fa-map-marker-alt fa-fw me-2"></i>{{ page.location }}</p>
                  {% endif %}
                  {% if page.collaborators %}
                    <p class="d-flex align-items-center mb-1"><i class="fas fa-users fa-fw me-2"></i>{{ page.collaborators }}</p>
                  {% endif %}
                </div>
              {% endif %}
              {%- comment -%} TOC: Use sticky-top to match theme's CSS offset {%- endcomment -%}
              {% if page.toc and page.toc.sidebar %}
                <nav id="toc-sidebar" class="sticky-top"></nav>
              {% endif %}
            </div>
          </div>
        {% else %}
          <div class="row">
            <div class="col-sm-3">
              {%- comment -%} Project metadata block {%- endcomment -%}
              {% if page.role or page.organization or page.start or page.end or page.location or page.collaborators %}
                <div class="small text-muted mb-3">
                  {% if page.role %}
                    <p class="d-flex align-items-center mb-1"><i class="fas fa-user-tie fa-fw me-2"></i>{{ page.role }}</p>
                  {% endif %}
                  {% if page.organization %}
                    <p class="d-flex align-items-center mb-1"><i class="fas fa-building fa-fw me-2"></i>{{ page.organization }}</p>
                  {% endif %}
                  {% if page.start or page.end %}
                    <p class="d-flex align-items-center mb-1">
                      <i class="fas fa-calendar-alt fa-fw me-2"></i>
                      {%- if page.start -%}
                        {{ page.start }} – {{ page.end | default: 'present' }}
                      {%- else -%}
                        {{ page.end }}
                      {%- endif -%}
                    </p>
                  {% endif %}
                  {% if page.location %}
                    <p class="d-flex align-items-center mb-1"><i class="fas fa-map-marker-alt fa-fw me-2"></i>{{ page.location }}</p>
                  {% endif %}
                  {% if page.collaborators %}
                    <p class="d-flex align-items-center mb-1"><i class="fas fa-users fa-fw me-2"></i>{{ page.collaborators }}</p>
                  {% endif %}
                </div>
              {% endif %}
              {%- comment -%} TOC: Use sticky-top to match theme's CSS offset {%- endcomment -%}
              {% if page.toc and page.toc.sidebar %}
                <nav id="toc-sidebar" class="sticky-top"></nav>
              {% endif %}
            </div>
            <div class="col-sm-9">
              {{ content }}
            </div>
          </div>
        {% endif %}
      {% else %}
        {{ content }}
      {% endif %}
    </div>
    {% include footer.liquid %}

    {% include scripts.liquid %}
  </body>
</html>
