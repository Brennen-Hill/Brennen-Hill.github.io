<!doctype html>
<html lang="{{ site.lang }}">
  <head>
    {% if page.redirect %}
      {% if page.redirect == true %}
        {% assign redirect = site.baseurl | append: '/' %}
      {% elsif page.redirect contains '://' %}
        {% assign redirect = page.redirect %}
      {% else %}
        {% assign redirect = page.redirect | relative_url %}
      {% endif %}
      <meta http-equiv="refresh" content="3; url={{ redirect }}">
    {% endif %}
    {% include head.liquid %}
  </head>

  <body class="{% if site.navbar_fixed %}fixed-top-nav{% endif %} {% unless site.footer_fixed %}sticky-bottom-footer{% endunless %}">
    {% include header.liquid %}

    <div class="container mt-5" role="main">
      {%- comment -%}
        Check if we need to display a sidebar.
        A sidebar is displayed if:
        1. page.toc.sidebar is enabled
        2. The page has project metadata
      {%- endcomment -%}
      {% assign has_sidebar_content = false %}
      {% if page.toc and page.toc.sidebar %}
        {% assign has_sidebar_content = true %}
      {% endif %}
      {% if page.role or page.organization or page.start or page.end or page.location or page.collaborators %}
        {% assign has_sidebar_content = true %}
      {% endif %}

      {% if has_sidebar_content %}
        {% if page.toc.sidebar == 'right' %}
          <div class="row">
            <div class="col-sm-9">{{ content }}</div>
            <div class="col-sm-3">
              {%- comment -%} Project metadata block {%- endcomment -%}
              {% if page.role or page.organization or page.start or page.end or page.location or page.collaborators %}
                <div class="project-meta">
                  {% if page.role %}
                    <p><i class="fas fa-user-tie"></i>{{ page.role }}</p>
                  {% endif %}
                  {% if page.organization %}
                    <p><i class="fas fa-building"></i>{{ page.organization }}</p>
                  {% endif %}
                  {% if page.start or page.end %}
                    <p>
                      <i class="fas fa-calendar-alt"></i>
                      {%- if page.start -%}
                        {{ page.start }} – {{ page.end | default: 'present' }}
                      {%- else -%}
                        {{ page.end }}
                      {%- endif -%}
                    </p>
                  {% endif %}
                  {% if page.location %}
                    <p><i class="fas fa-map-marker-alt"></i>{{ page.location }}</p>
                  {% endif %}
                  {% if page.collaborators %}
                    <p><i class="fas fa-users"></i>{{ page.collaborators }}</p>
                  {% endif %}
                </div>
              {% endif %}
              {%- comment -%} TOC {%- endcomment -%}
              {% if page.toc and page.toc.sidebar %}
                <nav id="toc-sidebar" class="sticky-top"></nav>
              {% endif %}
            </div>
          </div>
        {% else %}
          <div class="row">
            <div class="col-sm-9 order-sm-2">{{ content }}</div>
            <div class="col-sm-3 order-sm-1">
              {%- comment -%} Project metadata block {%- endcomment -%}
              {% if page.role or page.organization or page.start or page.end or page.location or page.collaborators %}
                <div class="project-meta">
                  {% if page.role %}
                    <p><i class="fas fa-user-tie"></i>{{ page.role }}</p>
                  {% endif %}
                  {% if page.organization %}
                    <p><i class="fas fa-building"></i>{{ page.organization }}</p>
                  {% endif %}
                  {% if page.start or page.end %}
                    <p>
                      <i class="fas fa-calendar-alt"></i>
                      {%- if page.start -%}
                        {{ page.start }} – {{ page.end | default: 'present' }}
                      {%- else -%}
                        {{ page.end }}
                      {%- endif -%}
                    </p>
                  {% endif %}
                  {% if page.location %}
                    <p><i class="fas fa-map-marker-alt"></i>{{ page.location }}</p>
                  {% endif %}
                  {% if page.collaborators %}
                    <p><i class="fas fa-users"></i>{{ page.collaborators }}</p>
                  {% endif %}
                </div>
              {% endif %}
              {%- comment -%} TOC {%- endcomment -%}
              {% if page.toc and page.toc.sidebar %}
                <nav id="toc-sidebar" class="sticky-top"></nav>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% else %}
        {{ content }}
      {% endif %}
    </div>

    {% include footer.liquid %}

    {% include scripts.liquid %}
  </body>
</html>
